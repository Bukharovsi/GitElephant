<?xml version="1.0" encoding="UTF-8"?>

<phpunit bootstrap="tests/bootstrap.php"
        colors="true"
        stopOnFailure="true">
    <testsuites>
        <testsuite name="GitElephant Test Suite">
            <directory>tests/GitElephant/</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory suffix=".php">src/GitElephant/</directory>
        </whitelist>
    </filter>
</phpunit>
